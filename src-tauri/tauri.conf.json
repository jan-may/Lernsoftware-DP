{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Lernsoftware-dynamisches-Programmieren",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "writeFile": true,
        "scope": ["$DOWNLOAD/*", "$APPDATA", "$HOME"]
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.jan.may",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "shortDescription": "Lernsoftware dynamisches Programmieren",
      "publisher": "Jan May",
      "category": "DeveloperTool"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Lernsoftware dynamisches Programmieren",
        "width": 1300,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 680,
        "maximized": true
      }
    ]
  }
}
